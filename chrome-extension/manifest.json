{
  "name": "Bookmark Tracker",
  "version": "1.0",
  "description": "Keep track of your bookmarks",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/-/en/gp/primecentral",
        "https://www.amazon.co.jp/gp/primecentral",
        "https://www.amazon.co.jp/gp/primecentral?language=en&ref_=nav_AccountFlyout_prime"
      ],
      "js": ["scripts/scrape-amazon.js"]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
